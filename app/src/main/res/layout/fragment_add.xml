<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFDADA"
        android:orientation="vertical"
        android:padding="12dp"
        tools:context=".NewNoteFragment">

        <TextView
            android:id="@+id/addNoteHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:height="70dp"
            android:background="#ABABAB"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="@string/add_new_task"
            android:textColor="@color/primary"
            android:textSize="45sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="120dp"
            android:fontFamily="sans-serif"
            android:text="@string/enter_your_task_name"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/addNoteTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/addNoteHeading"
            android:layout_marginTop="95dp"
            android:background="@drawable/border"
            android:fontFamily="sans-serif-light"
            android:hint="@string/enter_the_task_titile"
            android:maxLines="1"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColorHint="#585443"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="255dp"
            android:fontFamily="sans-serif"
            android:text="Task Description : "
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/addNoteDesc"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@id/addNoteTitle"
            android:layout_marginTop="85dp"
            android:background="@drawable/border"
            android:fontFamily="sans-serif-light"
            android:gravity="top"
            android:hint="@string/enter_the_task_description"
            android:padding="20dp"
            android:textColorHint="#585443"
            android:textSize="17sp" />


    </RelativeLayout>
</layout>