<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFDADA"
        android:orientation="vertical"
        android:padding="12dp"
        tools:context=".fragments.EditFragment">

        <TextView
            android:id="@+id/editNoteHeading"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:background="#ABABAB"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/edit_task_details"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="130dp"
            android:fontFamily="sans-serif"
            android:text="Task Name : "
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editNoteTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/editNoteHeading"
            android:layout_marginTop="95dp"
            android:background="@drawable/border"
            android:fontFamily="sans-serif"
            android:hint="@string/enter_the_title"
            android:maxLines="1"

            android:padding="12dp"
            android:textColor="#807A7A"
            android:textColorHint="#585443"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="270dp"
            android:fontFamily="sans-serif"
            android:text="Task Description : "
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editNoteDesc"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@id/editNoteTitle"
            android:layout_marginTop="70dp"
            android:background="@drawable/border"
            android:fontFamily="sans-serif"
            android:gravity="top"
            android:hint="@string/enter_the_description"
            android:padding="12dp"
            android:textColorHint="#585443"
            android:textSize="18sp" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/editNoteFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/primary"
            android:clickable="true"
            android:contentDescription="editFab"
            android:src="@drawable/done_icon"
            android:tintMode="@color/white" />

    </RelativeLayout>
</layout>